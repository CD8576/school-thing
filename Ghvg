from microbit import *
import audio

# Example PCM data (replace with actual audio data)
# Use a preprocessed PCM file and convert it to an array of integers
pcm_data = [
    128, 132, 136, 140, 144, 148, 152, 156, 160, 164, 168, 172, 176, 180, 184, 188,
    # Add more PCM data here
]

# Convert PCM values to bytes
pcm_bytes = bytes(pcm_data)

# Create an audio source from PCM data
audio_source = audio.AudioFrame(pcm_bytes)

# Play the PCM audio
while True:
    audio.play(audio_source)
    break  # Remove this break if you want to loop the audio
